<div class="container">
  <div class="burger">
    <h1>Eat-Da-Burger!</h1>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
          <table class=" highlight">
           <tbody>
              <tr>
              <td>{{this.burger_name}}</td>
              
              <td><form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="waves-effect waves-light btn-large" type="submit">Devour it!</button>
              </form></td>
              </tr>
            </tbody>
          </table>
           
          {{/unless}}
        {{/each}}
      </ul>
  </div>

  <div class="devoured">
    <h1>Devoured Burgers</h1>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
            <div>
            <div class="card-panel hoverable">
              {{this.burger_name}}
            </div>
              <br>
            </div>

            </li>
          {{/if}}
        {{/each}}
      </ul>
  </div>

  <div class="add">
    <h1>Add a Burger</h1>
      <form class="create-update-form" action="/add_burger" method="POST">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
  </div>
</div>
